{
  "hosting": [
    {
      "target": "xvdayri",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          // Esta regla aplica a todos los archivos HTML, CSS y JS.
          // La política 'no-cache' le dice al navegador que siempre revalide el archivo
          // con el servidor antes de usar la versión local.
          "source": "**/*.@(html|css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          // Archivos estáticos como imágenes pueden seguir teniendo un caché largo
          // ya que no cambian con tanta frecuencia.
          "source": "**/*.@(jpg|jpeg|gif|png|webp|svg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000" // 1 año
            }
          ]
        }
      ]
    }
  ]
}