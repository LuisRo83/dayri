{
  "hosting": [
    {
      "target": "xvdayri",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          // La página principal nunca debe ser cacheadas por el navegador.
          "source": "index.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          // Los archivos estáticos pueden ser cacheados por 1 año (para rendimiento),
          // ya que Firebase y su CDN se encargarán de invalidar el caché si el contenido cambia.
          "source": "**/*.@(js|css|webp|jpg|jpeg|gif|png|svg|eot|otf|ttf|woff|woff2)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000" // 1 año en segundos
            }
          ]
        }
      ]
    }
  ]
}